{
	"name": "ethdev",
	"displayName": "ethdev",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:tools"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ethereum-dev",
					"title": "Ethereum Dev",
					"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"ethereum-dev": [
				{
					"id": "tools",
					"name": "Tools"
				},
				{
					"id": "solidity-files",
					"name": "Solidity Files"
				},
				{
					"id": "smart-contracts",
					"name": "Smart Contracts"
				}
			]
		},
		"commands": [
			{
				"command": "tools.Web3",
				"title": "Web3"
			},
			{
				"command": "solidity-files.compileAll",
				"title": "Compile All",
				"icon": {
					"light": "media/dep.svg",
					"dark": "media/dep.svg"
				}
			},
			{
				"command": "smart-contracts.deploy",
				"title": "Deploy",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "smart-contracts.sendTransaction",
				"title": "SendTransaction",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "solidity-files.compileAll",
					"when": "view == solidity-files",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "smart-contracts.deploy",
					"when": "view == smart-contracts && viewItem == contract",
					"group": "inline"
				},
				{
					"command": "smart-contracts.sendTransaction",
					"when": "view == smart-contracts && viewItem == contract",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"@types/web3": "^1.0.19",
		"solc": "^0.5.9",
		"web3": "^1.0.0-beta.35",
		"web3-utils": "^1.0.0-beta.55"
	}
}
